{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lint": "eslint packages/*/{lib,test}/*.js",
    "pretest": "npm run lint -s",
    "test": "nyc ava packages/*/test",
    "dev": "ava packages/*/test --watch",
    "coverage": "meta coverage",
    "see-coverage": "meta see-coverage",
    "check-coverage": "meta check-coverage",
    "docs": "meta docs",
    "prebuild": "npm run lint -s",
    "build": "NODE_ENV=production node scripts/build.js"
  },
  "precommit": [
    "test",
    "check-coverage",
    "build",
    "docs"
  ],
  "eslintConfig": {
    "extends": "ngryman"
  },
  "ava": {
    "concurrency": 4,
    "require": [
      "babel-register",
      "./test/helpers/seed"
    ]
  },
  "babel": {
    "plugins": [
      "transform-es2015-parameters"
    ],
    "env": {
      "development": {
        "plugins": [
          "transform-es2015-modules-commonjs",
          "istanbul"
        ],
        "sourceMaps": "inline"
      }
    }
  },
  "nyc": {
    "include": [
      "packages/*/lib/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^2.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.14.0",
    "babel-plugin-transform-es2015-parameters": "^6.11.4",
    "clone": "^1.0.2",
    "lerna": "2.0.0-beta.27",
    "meta-dev": "^0.1.0",
    "pre-commit": "^1.1.3",
    "rollup-plugin-babel": "^2.6.1"
  }
}
