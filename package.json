{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lint": "eslint packages/*/{,lib/,test/}*.js",
    "pretest": "npm run lint -s",
    "test": "nyc ava packages/*/test",
    "test:package": "nyc ava",
    "dev": "ava packages/*/test --watch",
    "coverage": "nyc report --reporter=text-lcov | codecov",
    "see-coverage": "nyc report --reporter=html && open coverage/index.html",
    "check-coverage": "meta check-coverage",
    "docs": "meta docs",
    "build": "./scripts/build.js",
    "prepublish": "NODE_ENV=production npm run build -s"
  },
  "precommit": [
    "test",
    "check-coverage",
    "build",
    "docs"
  ],
  "eslintConfig": {
    "extends": "ngryman"
  },
  "ava": {
    "concurrency": 4,
    "require": [
      "babel-register",
      "./test/helpers/seed"
    ]
  },
  "babel": {
    "presets": [
      "node5"
    ],
    "plugins": [
      "istanbul"
    ]
  },
  "nyc": {
    "include": [
      "packages/{,lib/}*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-node5": "^12.0.0",
    "chalk": "^1.1.3",
    "clone": "^2.1.0",
    "codecov.io": "^0.1.6",
    "eslint": "^3.12.2",
    "eslint-config-ngryman": "^1.7.1",
    "lerna": "^1.1.3",
    "pre-commit": "^1.2.2",
    "read-pkg": "^2.0.0",
    "rollup-plugin-buble": "^0.15.0"
  }
}
